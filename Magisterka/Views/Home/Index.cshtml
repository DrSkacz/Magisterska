@{
    ViewData["Title"] = "Główna";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    @* Komentarze .net core mvc menu w _Layout w folderze Shared*@
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner2.jpg" alt="pionowy" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Oblicz długość kolektora pionowego
                    <br />
                    <a class="btn btn-default" href="/Home/Pionowy">
                        Przejdź do...
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner.jpg" alt="poziomyK" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Oblicz szczegółowo długość kolektora poziomego
                    <br />
                    <a class="btn btn-default" href="/Home/PoziomyKopec">
                        Przejdź do...
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner.jpg" alt="poziomyR" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Oblicz skróconą długość kolektora poziomego
                    <br />
                    <a class="btn btn-default" href="/Home/PoziomyRubik"> 
                        Przejdź do...
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

